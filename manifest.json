{
  "manifest_version": 3,
  "name": "TradingView Ticker Linker",
  "version": "1.2",
  "description": "Automatically detects stock ticker symbols on web pages and links them to TradingView charts.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "TradingView Ticker Linker - Active"
  }
}